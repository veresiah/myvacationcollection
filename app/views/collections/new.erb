<h2>Create a New Vacation Collection</h2>

<form action="/collections" method="POST">
  <label for="collection_destination">Destination</label><br>
  <input id="collection_destination" type="text" name="collection[destination]" /><br>
  <label for="collection_start_date">Start Date</label><br>
  <input id="collection_start_date" type="text" name="collection[start_date]" /><br>
  <label for="collection_end_date">End Date</label><br>
  <input id="collection_end_date" type="text" name="collection[end_date]" /><br>
  <label for="collection_trip_summary">Trip Summary</label><br>
  <input id="collection_trip_summary" type="text" name="collection[trip_summary]" /><br>
  <input type="submit" value="Create New Collection">
</form>
  <a class="button" href="/collections">View all Collections</a>
  <a class="button" href="/users/:slug">Home</a>
